<% include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 class="text-center">Add a new Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comment" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>

                <div>
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>

                <a href="/campgrounds/<%= campground._id %>">Go Back</a>
            </form>
        </div>

    </div>

</div>





<% include ../partials/footer%>